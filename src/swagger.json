{
    "openapi": "3.0.0",
    "info": {
        "title": "Desafio 01 - Trilha Nodejs",
        "description": "An API to control users in an application.",
        "version": "1.0.0",
        "contact": {
            "email": "adm@mail.com"
        }
    },
    "paths": {
        "/users": {
            "post": {
                "tags": ["Users"],
                "summary": "Creates a new user.",
                "description": "Creates a new user if email is not already in use.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "proprieties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    }
                                },
                                "example": {
                                    "name": "John Doe",
                                    "email": "jondoe@mail.com"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "User created",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "proprieties": {
                                        "id": {
                                            "type": "string"
                                        },
                                        "admin": {
                                            "type": "boolean"
                                        },
                                        "name": {
                                            "type": "string"
                                        },
                                        "email": {
                                            "type": "string"
                                        },
                                        "created_at": {
                                            "type": "date"
                                        },
                                        "updated_at": {
                                            "type": "date"
                                        }
                                    },
                                    "example": {
                                        "id": "9b175e61-56c2-4bf4-aa5e-dd782dc707c8",
                                        "admin": false,
                                        "name": "John Doe",
                                        "email": "jondoe@mail.com",
                                        "created_at": "2021-09-26T22:09:47.717Z",
                                        "updated_at": "2021-09-26T22:09:47.717Z"
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Email already being used!",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "proprieties": {
                                        "error": {
                                            "type": "string"
                                        }
                                    },
                                    "example": {
                                        "error": "Email already being used!"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}